<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:weightSum="1"
    android:padding="10dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border"
        android:padding="5dp"
        android:layout_marginBottom="5dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/acc_total"
                android:id="@+id/accountingBtn"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_weight="2"
                android:textStyle="bold"
                android:background="@drawable/button_style"
                android:layout_margin="3dp"/>

            <TextView
                android:layout_width="175px"
                android:layout_height="wrap_content"
                android:text=""
                android:gravity="right"
                android:id="@+id/accountingTxt"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:layout_weight="7"
                android:maxLength="7"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/yen"
                android:id="@+id/yenTxt"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_weight="1" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/collect_total"
                android:id="@+id/moneyTxt"
                android:gravity="center"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_weight="3"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="175px"
                android:layout_height="wrap_content"
                android:text=""
                android:gravity="right"
                android:id="@+id/collectMoney"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_weight="7" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/yen"
                android:id="@+id/yenTxt2"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_weight="1" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/num_of_people"
                android:id="@+id/peopleNumTxt"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_weight="1"
                android:textStyle="bold"
                />

            <TextView
                android:layout_width="100px"
                android:layout_height="wrap_content"
                android:text=""
                android:id="@+id/peopleNum"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:gravity="right" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/people"
                android:id="@+id/peopleTxt"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_weight="1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/diff_money"
                android:id="@+id/differenceTxt"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_weight="1"
                android:textStyle="bold" />

            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text=""
                android:id="@+id/differenceNumTxt"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:maxLength="7"
                android:gravity="right" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/yen"
                android:id="@+id/yenTxt3"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_weight="1" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/reset"
                android:id="@+id/resetBtn"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_weight="1"
                android:background="@drawable/button_style"
                android:layout_margin="3dp"/>
        </LinearLayout>
    </LinearLayout>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="295dp"
        android:id="@+id/WarikanList"
        android:fadeScrollbars="false"
        android:divider="#a8d8e7"
        android:dividerHeight="2dp"
        android:drawSelectorOnTop="false" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:gravity="center">

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/config"
            android:id="@+id/configBtn"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_weight="0.2"
            android:background="@drawable/button_style"
            android:layout_margin="3dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/unit"
            android:id="@+id/unitTxt"
            android:gravity="center"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_weight="0.2"
            android:textStyle="bold" />

        <TextView
            android:layout_width="75px"
            android:layout_height="wrap_content"
            android:text="1"
            android:id="@+id/unitNum"
            android:gravity="right"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_weight="0.4" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/yen"
            android:id="@+id/unityenTxt"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_weight="0.2" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/minus"
            android:id="@+id/unit_minusBtn"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_weight="0.1"
            android:background="@drawable/button_style"
            android:layout_margin="3dp"
            android:gravity="center"/>

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/plus"
            android:id="@+id/unit_plusBtn"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_weight="0.1"
            android:background="@drawable/button_style"
            android:layout_margin="3dp"
            android:gravity="center"/>

    </LinearLayout>
</LinearLayout>